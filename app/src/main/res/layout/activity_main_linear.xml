<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/textView"
        android:layout_width="190dp"
        android:layout_height="51dp"
        android:text="I love Android"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="12dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="219dp"
        android:layout_height="95dp"
        app:srcCompat="@drawable/flag"
        tools:layout_editor_absoluteX="194dp"
        tools:layout_editor_absoluteY="12dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button"
        android:setContentView = "activity_main_linear.xlm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press Me"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="126dp"
        android:onClickListener = "Label has been updated."

        tools:ignore="MissingConstraints" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch on/off"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="99dp"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/checkedTextView2"
        android:layout_width="142dp"
        android:layout_height="44dp"
        android:text="Check this out!"
        tools:layout_editor_absoluteX="269dp"
        tools:layout_editor_absoluteY="107dp"
        android:onChangedListener = "The Checkbox is now"

        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="I love Android"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="173dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>